@model salonfrSource.ModelDB.VReservation

@{
    ViewData["Title"] = "deleteReservation3";
    Layout = "~/Views/_Layout.cshtml";
}
@using (Html.BeginForm("deleteReservation", "Reservation", FormMethod.Post, new { @id = "DeleteReservationForm" }))
{
    <div class="container">
        <div class="row" style="padding-top:100px; padding-bottom:10px;">
            <div class="col-md-2">
                @Html.TextBox("reservation_date", null, new { @readonly = "readonly", @class = "form form-control" })
            </div>
            <div class="col-md-2">
                @Html.TextBox("reservation_time", null, new { @readonly = "readonly", @class = "form form-control" })
            </div>
            <div class="col-md-2">
                @Html.TextBox("service_name", null, new { @readonly = "readonly", @class = "form form-control" })
            </div>
        </div>
        <div class="row" style="padding-top:10px; padding-bottom:10px;">
            <div class="col-md-2">
                @Html.TextBox("client_name", null, new { @readonly = "readonly", @class = "form form-control" })
            </div>
            <div class="col-md-2">
                @Html.TextBox("client_sname", null, new { @readonly = "readonly", @class = "form form-control" })
            </div>
            <div class="col-md-2">
                @Html.TextBox("employee_name", null, new { @readonly = "readonly", @class = "form form-control" })
            </div>
        </div>
        <hr />
        <div class="row" style="padding-top:10px; padding-bottom:10px;">
            <div class="col-md-2">
            </div>
            <div class="col-md-2">
                <input id="btnDeleteReservation" type="submit" value="Usuń" class="btn btn-success" />
            </div>
            <div class="col-md-2">
                @Html.ActionLink("Anuluj", "Index", "Reservation", null, new { @class = "btn btn-danger" })
            </div>

        </div>
    </div>

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="container" style="visibility:hidden;">
        <div class="row">
            <div class="col-md-2">
                @Html.TextBox("reservation_id", null, new { @class = "form form-control", @readonly = "readonly" })
            </div>
        </div>
    </div>

}

