@model salonfrSource.ModelDB.VReservation

@{
    ViewData["Title"] = "UpdateReservation";
    Layout = "~/Views/_Layout.cshtml";
}
@using (Html.BeginForm("updateReservation", "Reservation", FormMethod.Post, new { @id = "UpdateReservationForm" }))
{
    <div class="container">
        <div class="row" style="padding-top:100px; padding-bottom:10px;">
            <div class="col-md-4">
                @Html.TextBox("client_data", null, new { @readonly = "readonly",  @class = "form form-control" })
            </div>
        </div>
        <div class="row" style="padding-top:10px; padding-bottom:10px;">
            <div class="col-md-1 hidden">
                @Html.TextBox("reservation_id", Model.reservation_id, new { @readonly = "readonly", @class = "form form-control" })
            </div>
            <div class="col-md-2">
                @Html.TextBox("reservation_date", Model.reservation_date.ToShortDateString(), new { @type = "date", @class = "form form-control" })
            </div>
            <div class="col-md-2">
                @Html.TextBox("reservation_time", Model.reservation_time, new {  @type = "time", @class = "form form-control" })
            </div>
        </div>
        <div class="row" style="padding-top:10px;padding-bottom:10px;">
            <div class="col-md-2">
                @Html.DropDownList("client_id", (MultiSelectList)ViewBag.clientList, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.TextBox("client_name", Model.client_name + " " + Model.client_sname, new { @readonly = "readonly", @class = "form form-control" })
            </div>

        </div>
        <div class="row" style="padding-top:10px;padding-bottom:10px;">
            <div class="col-md-2">
                @Html.DropDownList("services_id", (MultiSelectList)ViewBag.serviceList, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.TextBox("service_name", Model.services_name, new { @readonly = "readonly", @class = "form form-control" })
            </div>
        </div>
        <div class="row" style="padding-top:10px;padding-bottom:10px;">
            <div class="col-md-2">
                @Html.DropDownList("employee_id", (MultiSelectList)ViewBag.employeeList, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.TextBox("employee_name", Model.employee_name, new { @readonly = "readonly", @class = "form form-control" })
            </div>
        </div>
        <hr />
        <div class="row" style="padding-top:10px; padding-bottom:10px;">
            <div class="col-md-2">
                @if(!String.IsNullOrEmpty(ViewBag.Info))
                {
                    @ViewBag.Info
                } 
            </div>
            <div class="col-md-2">
                <input id="btnUpdateReservation" type="submit" value="Aktualizuj" class="btn btn-success" />
            </div>
            <div class="col-md-2">
                @Html.ActionLink("Anuluj", "Index", "Reservation", null, new { @class = "btn btn-danger" })
            </div>

        </div>
    </div>

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="container" style="visibility:hidden;">
        <div class="row">
            <div class="col-md-2">
                @Html.TextBox("reservation_id", null, new { @class = "form form-control", @readonly = "readonly" })
            </div>
        </div>
    </div>

}

