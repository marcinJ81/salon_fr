@model salonfrSource.ModelDB.Reservation


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>Dodaj klienta</title>
</head>
<body>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <p style="font-size:22px;font-weight: bold;">
                        Nowa rezerwacja
                    </p>
                </div>
                <div class="modal-body">
                    <div class="panel-heading">
                        <div class="container">
                            @using (Html.BeginForm("AddReservation", "Reservation", FormMethod.Post, new { @id="AddReservationForm"}))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="row" style="padding-top:10px;padding-bottom:10px;">
                                    <div class="table">
                                        <div class="col-md-2">
                                            @Html.TextBox("dateReservation", null, new { @class = "datepicker", @placeholder = "Data rezerwacji" })
                                        </div>
                                        <div class="col-md-2">
                                            @Html.DropDownList("clientList", (MultiSelectList)ViewBag.clientList, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="padding-top:10px;padding-bottom:10px;">
                                    <div class="col-md-2">
                                        @Html.DropDownList("serviceList", (MultiSelectList)ViewBag.serviceList, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-2">
                                        @Html.DropDownList("employeeList", (MultiSelectList)ViewBag.employeeList, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-md-8">

                        </div>
                        <div class="col-md-2">
                            <input id="btnAddReservation" type="submit" value="Dodaj" class="btn btn-success" />
                        </div>
                        <div class="col-md-2">
                            @Html.ActionLink("Anuluj", "Index", "Reservation", null, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
                        $(document).ready(function () {
                            // debugger
                            $('#myModal').modal({ backdrop: 'static' });

                            $('#klozet').on('click', function (event) {
                                event.preventDefault();
                                // $('#myModal').modal('close');
                            });
                            $("#btnAddReservation").on('click', function (event) {
                                $('#AddReservationForm').submit();
                            });
                        });
         $(function () {
             $('#dateReservation').datetimepicker();
         });

    </script>
</body>
</html>
